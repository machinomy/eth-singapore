{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "sourceRoot": "src/",
    "outDir": "dist/",
    "target": "es2017",
    "module": "commonjs",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "@machinomy/types-ethereumjs-units",
      "@machinomy/types-ethereumjs-util",
      "@machinomy/types-web3",
      "@machinomy/types-truffle",
      "@machinomy/types-truffle-contract",
      "@machinomy/types-truffle-deployer",
      "@types/node",
      "@types/jest"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
