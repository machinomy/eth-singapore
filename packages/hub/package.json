{
  "name": "@eth-singapore/hub",
  "version": "0.0.1",
  "private": true,
  "license": "UNLICENSED",
  "config": {
    "truffleTests": "dist/*.test.js",
    "wrappedArtifacts": "build/contracts/@(Main).json"
  },
  "scripts": {
    "prepublish": "yarn lint && yarn build",
    "lint": "yarn lint:solidity && yarn lint:typescript",
    "lint:typescript": "tslint --format stylish --project . --exclude 'node_modules/**/*.ts'",
    "lint:solidity": "solium -d contracts/",
    "coverage": "yarn build && jest --coverage && cat ./coverage/lcov.info | coveralls",
    "coverage:solidity": "solidity-coverage",
    "build": "yarn support:wrap && yarn build:ts && tsc --project tsconfig.migrations.json",
    "build:ts": "rm -rf dist/ && tsc --project tsconfig.json",
    "start": "DEBUG=* yarn build && node-dev dist/src/bin/main.js --config=config.json",
    "start-dev": "DEBUG=* ts-node-dev src/bin/main.ts --config=config.json",
    "test": "yarn test:ts && yarn test:rest && yarn truffle:test",
    "test:ts": "jest",
    "test:rest": "ts-node test/rest/index.ts",
    "create-migration": "yarn typeorm migration:generate -n",
    "migrate": "typeorm migration:run",
    "support:wrap": "yarn truffle:compile && wraptso $npm_package_config_wrappedArtifacts --output ./src/wrappers",
    "support:build": "tsc --project support/tsconfig.json",
    "truffle:compile": "truffle compile",
    "truffle:test": "run-with-testrpc 'truffle test $npm_package_config_truffleTests'"
  },
  "dependencies": {
    "@machinomy/hdwallet-provider": "^1.1.0",
    "@machinomy/logger": "^0.2.3",
    "@machinomy/types-web3": "^0.0.4",
    "@types/json-rpc-ws": "^4.0.2",
    "@types/koa": "^2.0.46",
    "@types/koa-bodyparser": "^5.0.1",
    "@types/koa-router": "^7.0.33",
    "@types/koa-session": "^5.7.4",
    "@types/newman": "^3.10.0",
    "@types/node": "^10.12.11",
    "@types/yargs": "^12.0.1",
    "bignumber.js": "4.1.0",
    "decko": "^1.2.0",
    "eth-sig-util": "^2.1.0",
    "ethereumjs-units": "^0.2.0",
    "ethereumjs-util": "^5.2.0",
    "json-rpc-ws": "^7.0.0",
    "koa": "^2.6.1",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "koa-session": "^5.10.0",
    "newman": "^4.2.2",
    "sqlite3": "^4.0.4",
    "truffle-contract": "^3.0.0",
    "ts-typed-events": "^1.1.1",
    "typeorm": "^0.2.9",
    "yargs": "^12.0.5",
    "web3": "^0.20.1"
  },
  "devDependencies": {
    "@machinomy/types-eth-sig-util": "^0.0.8",
    "@machinomy/types-ethereumjs-units": "^0.0.2",
    "@machinomy/types-ethereumjs-util": "^0.0.12",
    "@machinomy/types-truffle": "^0.0.6",
    "@machinomy/types-truffle-compile": "^0.0.2",
    "@machinomy/types-truffle-config": "^0.0.2",
    "@machinomy/types-truffle-contract-sources": "^0.0.1",
    "@machinomy/types-truffle-deployer": "^0.0.3",
    "@machinomy/types-truffle-resolver": "^0.0.1",
    "@types/jest": "^23.3.9",
    "coveralls": "^3.0.2",
    "istanbul": "^0.4.5",
    "jest": "^23.6.0",
    "node-dev": "^3.1.3",
    "nyc": "^13.1.0",
    "openzeppelin-solidity": "^1.9.0",
    "run-with-testrpc": "^0.3.0",
    "solidity-coverage": "^0.5.4",
    "solium": "^1.1.7",
    "truffle": "^4.1.11",
    "truffle-hdwallet-provider": "^0.0.5",
    "tslint": "^5.11.0",
    "tslint-config-standard-plus": "^2.1.1",
    "ts-jest": "23.10.5",
    "ts-node-dev": "^1.0.0-pre.30",
    "typescript": "^3.3.0-dev.20181201"
  }
}
